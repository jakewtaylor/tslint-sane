{
  "extends": "./base.json",
  "rules": {
    "comment-format": [
      true,
      "check-space"
    ],
    "no-consecutive-blank-lines": true,
    "number-literal-format": true,
    "object-literal-key-quotes": [
      true,
      "consistent-as-needed"
    ],
    "object-literal-shorthand": true,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-finally",
      "check-open-brace"
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "case-insensitive"
      }
    ],
    "prefer-template": true,
    "quotemark": [
      true,
      "single",
      "avoid-template"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "space-before-function-paren": [
      true,
      "always"
    ],
    "space-within-parens": [
      true,
      {
        "min": 0
      }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-preblock"
    ],
    "eofline": true,
    "max-line-length": [
      true,
      {
        "limit": 100,
        "ignore-pattern": "^\\s*\\*|^\\s*\\/\\/"
      }
    ]
  }
}