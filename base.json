{
  "rules": {
    "class-name": true,
    "indent": [
      true,
      "spaces",
      4
    ],
    "no-eval": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format"
    ],
    "no-unused-variable": [
      true,
      "check-parameters"
    ],
    "no-unused-expression": true,
    "adjacent-overload-signatures": true,
    "member-access": true,
    "no-unnecessary-type-assertion": true,
    "prefer-for-of": true,
    "curly": [
      true,
      "ignore-same-line"
    ],
    "no-conditional-assignment": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": [
      true,
      "check-parameters"
    ],
    "no-empty": [
      true,
      "allow-empty-catch"
    ],
    "no-for-in-array": true,
    "no-implicit-dependencies": [
      true,
      "dev"
    ],
    "no-return-await": true,
    "no-string-literal": true,
    "no-this-assignment": [
      true,
      {
        "allow-destructuring": true
      }
    ],
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "prefer-object-spread": true,
    "radix": true,
    "restrict-plus-operands": true,
    "triple-equals": [
      true,
      "allow-null-check",
      "allow-undefined-check"
    ],
    "max-classes-per-file": [
      true,
      1
    ],
    "no-duplicate-imports": true,
    "prefer-const": [
      true,
      {
        "destructuring": "all"
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "no-trailing-whitespace": [
      true,
      "ignore-template-strings"
    ],
    "arrow-return-shorthand": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "no-consecutive-blank-lines": true,
    "number-literal-format": true,
    "object-literal-key-quotes": [
      true,
      "consistent-as-needed"
    ],
    "object-literal-shorthand": true,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-finally",
      "check-open-brace"
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "case-insensitive"
      }
    ],
    "prefer-template": true,
    "quotemark": [
      true,
      "single",
      "avoid-template"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "space-before-function-paren": [
      true,
      "always"
    ],
    "space-within-parens": [
      true,
      {
        "min": 0
      }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-preblock"
    ],
    "eofline": true,
    "max-line-length": [
      true,
      {
        "limit": 100,
        "ignore-pattern": "^\\s*\\*|^\\s*\\/\\/"
      }
    ]
  }
}